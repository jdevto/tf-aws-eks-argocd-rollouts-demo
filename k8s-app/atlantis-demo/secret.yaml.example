apiVersion: v1
kind: Secret
metadata:
  name: atlantis-demo-secrets
  labels:
    app: atlantis-demo
type: Opaque
stringData:
  # Authentication Method 1: GitHub Personal Access Token (for personal repos)
  # GitHub user (for testing: use "test" - for production: use real username)
  # Atlantis requires at least one auth method to start
  # For testing deployment, use dummy value "test"
  # For full functionality, set your GitHub username
  github-user: "test"
  # GitHub token (for testing: use "test" - for production: use real token)
  # Create token at: https://github.com/settings/tokens
  # Required scopes: repo, admin:repo_hook, write:repo_hook
  github-token: "test"

  # Authentication Method 2: GitHub App (RECOMMENDED for organizations)
  # GitHub App ID (for organization access - preferred method)
  # Create GitHub App at: https://github.com/organizations/YOUR_ORG/settings/apps/new
  # Then install it on your organization
  github-app-id: ""
  # GitHub App Key (private key from the GitHub App)
  # Download from: https://github.com/organizations/YOUR_ORG/settings/apps/YOUR_APP
  # This is the private key file content (PEM format)
  github-app-key: ""
  # GitHub App Installation ID (after installing the app on org/repos)
  # Find it via: gh api /orgs/YOUR_ORG/installations or check app settings
  github-app-installation-id: ""

  # Webhook secret (optional - for webhook validation)
  # Generate with: openssl rand -hex 16
  # Set this in GitHub App webhook settings
  webhook-secret: ""
